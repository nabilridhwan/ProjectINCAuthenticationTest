generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model privillege {
  privillegeid BigInt  @unique(map: "uq_privillegeid")
  description  String? @db.VarChar
  user         user[]
}

model user {
  userid       BigInt     @id(map: "userid") @default(autoincrement())
  username     String     @unique(map: "uq_username") @db.VarChar
  email        String     @unique(map: "uq_email") @db.VarChar
  password     String     @db.VarChar
  created_at   DateTime   @default(now())
  privillegeid BigInt     @default(1)
  privillege   privillege @relation(fields: [privillegeid], references: [privillegeid], onDelete: SetNull, onUpdate: SetNull, map: "fk_privillegeid")

  @@index([privillegeid], map: "fki_fk_privillegeid")
}
