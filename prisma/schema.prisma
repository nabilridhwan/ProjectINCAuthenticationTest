generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Privilege {
  privilegeid Int
  description String? @db.VarChar(50)
  user        User[]

  @@unique([privilegeid])
  @@index([privilegeid])
}

model User {
  userid      Int       @id @default(autoincrement())
  username    String    @unique @db.VarChar(255)
  email       String    @unique @db.VarChar(100)
  password    String?   @db.VarChar(100)
  created_at  DateTime  @default(now())
  privilegeid Int       @default(1)
  privilege   Privilege @relation(fields: [privilegeid], references: [privilegeid], onDelete: SetDefault, onUpdate: SetDefault)

  Verification Verification[]
  @@index([userid])
}

model Verification {
  verification_id Int      @id @default(autoincrement())
  userid          Int
  user            User     @relation(fields: [userid], references: [userid], onDelete: Cascade, onUpdate: Cascade)
  guid            String   @unique @db.VarChar(255)
  created_at      DateTime @default(now())
  expires_in      DateTime
}
